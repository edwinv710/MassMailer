<%= simple_form_for(@server) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :port %>
    <%= f.input :host %>
    <%= f.input :authentication %>
    <%= f.input :user_name, label: "User Name" %>
    <%= f.input :server_password, label: "Server Password" %>
    <%= f.input :max_emails, label: "Maximum Emails Per Day" %>
    <%= f.input :tls %> 
    <%= f.button :submit %>
  
<% end %>
